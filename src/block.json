{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,

	"name": "uri/dynamic-metrics",
	"version": "2.0.1",
	"title": "Dynamic Metrics",
	"category": "widgets",
	"icon": "cloud",
	"description": "Display data from Google Sheets.",

	"supports": {
		"html": false
	},

	"attributes": {
		"description": {
			"type": "string",
			"default": "Description"
		},
		"flipPositions": {
			"type": "boolean",
			"default": false
		},

		"dataPrefix": {
			"type": "string",
			"default": ""
		},
		"dataSuffix": {
			"type": "string",
			"default": ""
		},

		"sheetCSVURL": {
			"type": "string"
		},
		"dataLocation": {
			"type": "string"
		},
		"descriptionLocation": {
			"type": "string"
		},

		"animatedCounting": {
			"type": "boolean",
			"default": true
		},
		"countDuration": {
			"type": "integer",
			"default": 7500
		}
	},

	"textdomain": "weatherblock",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}